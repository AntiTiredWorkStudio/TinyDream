<view class=''>
 <view class='page-header'>
    <view class='menu col'>
      <view id="mine"  bindtap="switchType" class='{{type.mine}}' >
        <text >我的小梦想</text>
      </view>
      <view id="bingo" bindtap="switchType" class='{{type.bingo}}'>
        <text>我中标的梦想池</text>
      </view>
      <view id="plan" bindtap="switchType" class='{{type.plan}}'>
        <text>梦想规则</text>
      </view>
    </view>
  </view>
 <view class='page-body'>
  <view bindtap="onEdit"  wx:for="{{dreams}}" wx:for-item="dream" wx:for-index="seek" id="{{dream.did}}"  class='box_huzhu' style='text-align:center;color:white;background:#6dceaa'>
    <text class='bloc' style='padding-top:15px'>{{dream.title}}</text>
    <text class='bloc' style='padding:10px 0 5px 0'>{{dream.content}}</text>
  </view>
  <view>
     <navigator navigate="true" url="../mx_xieyi/mx_xieyi">
      <image src='http://cloud.antit.top/add.png' style='height:50px;width:50px;display:block;margin:0 auto'></image> 
     </navigator>
  </view>
 </view>
 <!-- 底部导航栏 -->
  <view class="weui-footer_fixed-bottom m_footer row">
       <view class='col'>
        <view class='col-4 m_active'>
        <navigator redirect="true" url="../index/index"><image src='/image/canyuhuzhu.png' class='footer_logo'></image>
        <text class='bloc'>参与互动</text> </navigator>
        </view>
       <view class='col-4'>
        <image src='/image/canyuhuzhu.png' class='footer_logo'></image>
        <text class='bloc'>小梦想</text> 
        </view>
        <view class='col-4'>
        <navigator redirect="true" url="../mx_wode/mx_wode"><image src='/image/canyuhuzhu.png' class='footer_logo'></image>
        <text class='bloc' >我的</text> </navigator>
        </view>
       </view>
      </view>
  <!-- 底部结束 -->
</view>