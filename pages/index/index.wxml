<view class="container">
  <!------ 小梦想部分 -------->
  <view class='m_cheng'></view>
  <view class="page-head" >
     <!-- 互助小梦想 -->
     <view wx:if="{{!authVisible}}" animation="{{orderAnimation}}" wx:for="{{orderList}}" wx:for-item="order" wx:for-index="seek" class="page-head-title">
        <view class='w_logo flex-item'>
        <image class="image flex-item" style='width:20px;height:20px;margin:5px' src="{{order.headicon}}"/>
        <text class='w_name flex-item'>{{order.cNickname}}</text>
        </view>
      <view class='w_desc flex-item'>{{order.ctime}}前参与互助了{{order.dcount}}份小梦想</view>
     </view>
  </view>
  
  <view  class="page-body">
    <view wx:if="{{!authVisible}}" class="page-section wm_box">
      <view class='flex-item wm_header'>
        <view class='wm_menxiang'>{{mainpool.ptitle}}</view>
        <view class='wm_time'>距离结束
          <text class='timer'>{{poolHours}}</text>:
          <text class='timer'>{{poolMinutes}}</text>:
          <text class='timer'>{{poolSeconds}}</text>
        </view>
      </view>
       <view class='wm_body'>
         <view class='wm_money width_25'>
          <text class='bloc'>互助目标</text>
          <text class='bloc'><text class='color_red'>{{mainpool.tbill*0.000001}}</text>万元</text>
         </view>
         <view class='wm_timer width_25'>
          <text class='bloc'>时限</text>
          <text class='bloc'><text class='color_red'>{{mainpool.duration/86400}}</text>天</text>
         </view>
         <view class='wm_prace width_25'>
          <text class='bloc'>价格</text>
          <text class='bloc'><text class='color_red'>{{mainpool.ubill*0.01}}</text>¥/份</text>
         </view>
         <view class='wm_btn width_25'>
           <button id="{{mainpool.pid}}" class='weui-btn' bindtap="joinin">参与</button>
         </view>
       </view>
       <view class='wm_jindu'>
           <progress class='wm_progress' percent='{{mainpool.cbill/mainpool.tbill*100}}' activeColor='#5ecd98' backgroundColor='#a0a0a0' stroke-width='20'>
           <text class='baifenbi'>{{mainpool.cbill/mainpool.tbill*100}}%</text>
           </progress>
           <view class='m_jine'>金额已达<text class='color_red'>{{mainpool.realBill}}</text>{{mainpool.unit}}</view>
        </view>
        <view class='flex-item' style='margin:40rpx 0px 20rpx 0px'><button style='color:white;background:#5ecd98;width:80%;border-radius:25px' bindtap="morePools">更多梦想池</button>
        
        </view>
       </view>

      <view wx:if="{{authVisible}}" class='flex-item' style='margin:40rpx 0px 20rpx 0px'>
        <text class='.index-ft'>小程序将会获取您的用户信息，请您授权</text>
      <button style='color:white;background:#5ecd98;width:80%;border-radius:25px' open-type="getUserInfo" bindgetuserinfo='onGetUserInfo'>允许授权</button>
        </view>

       <!-- 小梦想互助步骤 -->
       <view wx:if="{{!authVisible}}"  class='page-buzhou'>
        <view style='margin-top:10px'>小梦想互助步骤</view>
        <view class='mat_30'>1、多人参与互助完成梦想池互动目标</view>
        <view class='mat_30'>2、公平公正通过彩票号码产生1名幸运者</view>
        <view class='mat_30'>3、幸运者的发现互助资金启动梦想</view>
        <view class='mat_30'>4、梦想执行跟踪报道</view>
         <!-- <view class='mat_30'>4、梦想执行跟踪报道</view> -->
        <navigator url="../mx_huzhu/mx_huzhu"><view class='mat_30' style='float:right;margin-right:20rpx;text-decoration:underline'>查看详情</view></navigator>
       </view>
  </view>
  <!-- 底部导航栏 -->
      <view class="weui-footer_fixed-bottom m_footer row">
       <view class='col'>
        <view class='col-4 m_active'>
        <image src='/image/canyuhuzhu.png' class='footer_logo'></image>
        <text class='bloc'>参与互动</text>
        </view>
       <view class='col-4'>
        <navigator redirect="true" url="../mx_naicha/mx_naicha"><image src='/image/canyuhuzhu.png' class='footer_logo'></image>
        <text class='bloc'>小梦想</text> </navigator>
        </view>
        <view class='col-4'>
        <navigator redirect="true" url="../mx_wode/mx_wode"><image src='/image/canyuhuzhu.png' class='footer_logo'></image>
        <text class='bloc' >我的</text> </navigator>
        </view>
       </view>
      </view>
      <!-- 底部结束 -->
</view>