      </view>
    </view>
  </view>
  <!--新版UI-->
  <view class="page-body">
    <view wx:if="{{!authVisible}}" class="page-section wm_box">
      <view class='flex-item wm_header'>
        <view class='wm_menxiang'>{{mainpool.ptitle}}</view>
        <view class='wm_time'>距离结束
          <text class='timer'>{{poolHours}}</text>
          <text style='padding-left:2px;padding-right:2px'>:</text>
          <text class='timer'>{{poolMinutes}}</text>
          <text style='padding-left:2px;padding-right:2px'>:</text>
          <text class='timer'>{{poolSeconds}}</text>
        </view>
      </view>
      <!-- 这一块 -->
      <view class='col' style='background:white;padding-top:10px'>
        <text class='bloc' style='text-align:center;margin:0 auto'><text class='color_red'>{{mainpool.realBill}}</text> {{mainpool.unit}}</text>
      </view>
      <view class='col' style='background:white'>
        <text class='bloc' style='text-align:center;margin:0 auto'>金额已达</text>
      </view>
      <view class='wm_body col'>
        <view class='wm_money col-4'>
          <text class=''>互助目标</text>
          <text class=''><text class='col_red'>{{mainpool.realtBill}}</text>{{mainpool.realtUnit}}</text>
        </view>
        <view class='wm_timer col-4'>
          <text class=''>时限</text>
          <text class=''><text class='col_red'>{{mainpool.realDuration}}</text></text>
        </view>
        <view class='wm_prace col-4'>
          <text class=''>价格</text>
          <text class=''><text class='col_red'>¥{{mainpool.ubill*0.01}}</text>/份</text>
        </view>
      </view>
      <view class='wm_jindu' style='padding-top:15px'>
        <progress class='wm_progress' percent='{{mainpool.percentVal}}' activeColor='#5ecd98' backgroundColor='#a0a0a0' stroke-width='20'>
          <text class='baifenbi'>{{mainpool.percentVal}}%</text>
        </progress>
        <view class='yz_group row' style='width:70%;margin:5px auto'>
          <view class='flex-item' style='margin:30rpx 0px 30rpx 0px;'>
            <button id="{{mainpool.pid}}" bindtap="joinin" style='color:white;background:#e9ba65;border-radius:10px;'>参与互助</button>
          </view>
        </view>

        <navigator>
          <view bindtap='morePools' class='mat_30' style='float:right;margin-right:20rpx;text-decoration:underline'>查看更多梦想</view>
        </navigator>
      </view>
      <!-- 进度结束 -->
    </view>

